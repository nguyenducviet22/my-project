		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean update(Brand t) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean delete(Brand t) {
		// TODO Auto-generated method stub
		return false;
	}

	public static void main(String[] args) {
		BrandDao brandDao = new BrandDao();
