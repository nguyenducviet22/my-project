	@Override
	public Brand insert(Brand t) {
		String sql = "insert into brand (bid, bname)" + "value (?, ?)";
		try {
			con = JDBCUtil.getConnection();
			pst = con.prepareStatement(sql);
			System.out.println(sql);
			pst.setInt(1, t.getBid());
			pst.setString(2, t.getBname());
			pst.executeUpdate();
			JDBCUtil.closeConnection(con);
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}
		return null;
	}

